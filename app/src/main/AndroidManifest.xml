<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tdp.bikum.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name=".activities.OptActivity"
            android:exported="false" />
        <!-- MainActivity là màn hình khởi động -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"> <!-- Thêm thuộc tính exported -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- RegisterActivity -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" /> <!-- Không cần truy cập từ bên ngoài -->
        <!-- LoginActivity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" /> <!-- Không cần truy cập từ bên ngoài -->
        <!-- ForgotPasswordActivity -->
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:exported="false" />
    </application>

</manifest>